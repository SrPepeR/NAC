<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calc" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_normal</item>
        <item name="colorPrimaryDark">@color/purple_dark</item>
        <item name="colorPrimaryVariant">@color/black_purple</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/contrast_normal</item>
        <item name="colorSecondaryVariant">@color/contrast_dark</item>
        <item name="colorOnSecondary">@color/contrast_low</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Background color. -->
        <item name="android:background" tools:targetApi="l">?attr/colorPrimaryDark</item>
    </style>

    <style name="ButtonOne">
        <item name="android:textSize">40sp</item>
    </style>

    <style name="ButtonOneSmall">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="ButtonTwo">
        <item name="android:textSize">40sp</item>
    </style>

    <style name="ButtonTwoSmall">
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="ButtonThreeSmall">
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ButtonFour">
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">35sp</item>
    </style>

    <style name="ButtonFive">
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="TextOne">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextTwo">
        <item name="android:textSize">35sp</item>
    </style>

    <style name="TextThree">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="TextFour">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/contrast_mid</item>
    </style>

    <style name="TextFive">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/contrast_mid</item>
    </style>
</resources>